public <T> Transformer<T, T> applySchedulers() {  
    return observable -> observable.subscribeOn(Schedulers.io())
        .observeOn(AndroidSchedulers.mainThread());
}


tv.setEnabled(false);
					tv.setTag(R.id.action_bar_title, true);
					if (callBack != null) {
						callBack.onBack(false);
					}
					if (l > 0 && l < validate_second * 1000) {
						long second = l / 1000;
						String text = String.format(Locale.getDefault(), DEFAULT_FORMAT_TEXT, String.valueOf(second));
						if (callBack instanceof SimpleCallBack) {
							text = ((SimpleCallBack) callBack).format(second);
						}
						tv.setText(Html.fromHtml(text));
					} else {
						cancel();
						tv.setText(tv.getTag(R.id.action_bar).toString());
